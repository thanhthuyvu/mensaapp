<%- include("partials/header"); -%>


<!-- HEADER MIT SUCHFELD -->
<section class="jumbotron jumbotron-fluid text-center head">
  <div class="container">

    <form class="form-center justify-content-center ">
      <div class="form-row form-inline justify-content-center ">

        <input class="form-control mr-sm-2" type="text" placeholder="Mensa finden" aria-label="Search"
          style="width: 500px;">

        <button class="btn btn-info my-2 my-sm-0" type="button"><span class="glyphicon glyphicon-search"></span>
          Search</button>

      </div>
    </form>

  </div>
</section>

<main role="main" class="container-fluid main">

  <%  mensen.forEach(function(mensa){ %>


  <!-- KARTEN MIT MENSEN -->


  <div class="card mb-3 mt-3">
    <div class="row no-gutters shadow">

      <div class="card-body">
        <h5 class="card-title">
          <a href="/mensen/<%=mensa.id%>/<%=mensa.name%>/<%=today%>/meals"
            class="card-title text-muted"><%=mensa.name%></a>

          <p class="text-right">
            <%  if(mensa.istMeinLiebling === true){ %>
            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-heart-fill" fill="currentColor"
              xmlns="http://www.w3.org/2000/svg">
              <path fill-rule="evenodd" d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314z" />
            </svg>
            <% } else { %>
            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-heart" fill="currentColor"
              xmlns="http://www.w3.org/2000/svg">
              <path fill-rule="evenodd"
                d="M8 2.748l-.717-.737C5.6.281 2.514.878 1.4 3.053c-.523 1.023-.641 2.5.314 4.385.92 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542 6.286-6.357.955-1.886.838-3.362.314-4.385C13.486.878 10.4.28 8.717 2.01L8 2.748zM8 15C-7.333 4.868 3.279-3.04 7.824 1.143c.06.055.119.112.176.171a3.12 3.12 0 0 1 .176-.17C12.72-3.042 23.333 4.867 8 15z" />
            </svg>
            <% } %>
          </p>
        </h5>
        <p class="card-text"><%=mensa.address%></p>

      </div>

    </div>
  </div>





  <% }) %>

</main>

</div>

</div>
<%- include("partials/footer"); -%>