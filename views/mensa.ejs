    <!-- // FILTERS   -->



    <% if(dishes.length != 0){ %>
    <%  dishes.forEach(function(dish){ %>
    <% let className= getClassName(dish.notes) %>
    <% var dishString= JSON.stringify(dish); %>


    <div class="filterDiv <%=className%> ">
      <div id="foodcard" class="card mb-3 shadow ">
        <h5 class="card-header "><%=dish.name%>
        
        <form action="/speise/<%=dish.id%>/save" method="post" >
        <div class="add-btn">
            <input id="<%=dish.id%>" type="checkbox" name="checkbox" value="<%=dishString%>" onChange="this.form.submit()"/>
          <label for="<%=dish.id%>"/>
          </div>
            </form>
        </h5>
        <div class="card-body">
          <h6 class="card-title"><%=dish.category%></h6>
          <p class="card-text">
            Studenten: <%=dish.prices.students%> €
            Arbeiter: <%=dish.prices.employees%> €
            Regular: <%=dish.prices.others%> €</p>

          <p><%=dish.notes%></p>

          <%  if(className == "vegan"){ %>
          <span id="vegan" class="<%=className%>"> VEGAN <i class="fas fa-leaf"></i> </span>
          <% } else if(className == "meat") { %>
          <span id="meat" class="<%=className%>"> FLEICH <i class="fas fa-drumstick-bite"></i></span>
          <% } else { %>
          <span id="vegetarian" class="<%=className%>"> VEGETARIAN <i class="fas fa-egg"></i> </span>
          <% } %>

        </div>

      </div>
  
    </div>


    <script type="text/javascript">


      // filter meals
      filterSelection("all")
      function filterSelection(c) {
        var x, i;
        x = document.getElementsByClassName("filterDiv");
        if (c == "all") c = "";
        // Add the "show" class (display:block) to the filtered elements, and remove the "show" class from the elements that are not selected
        for (i = 0; i < x.length; i++) {
          w3RemoveClass(x[i], "show");
          if (x[i].className.indexOf(c) > -1) w3AddClass(x[i], "show");
        }
      }

      // Show filtered elements
      function w3AddClass(element, name) {
        var i, arr1, arr2;
        arr1 = element.className.split(" ");
        arr2 = name.split(" ");
        for (i = 0; i < arr2.length; i++) {
          if (arr1.indexOf(arr2[i]) == -1) {
            element.className += " " + arr2[i];
          }
        }
      }

      // Hide elements that are not selected
      function w3RemoveClass(element, name) {
        var i, arr1, arr2;
        arr1 = element.className.split(" ");
        arr2 = name.split(" ");
        for (i = 0; i < arr2.length; i++) {
          while (arr1.indexOf(arr2[i]) > -1) {
            arr1.splice(arr1.indexOf(arr2[i]), 1);
          }
        }
        element.className = arr1.join(" ");
      }

      // Add active class to the current control button (highlight it)
      var btnContainer = document.getElementById("myBtnContainer");
      var btns = btnContainer.getElementsByClassName("filter-btn");
      for (var i = 0; i < btns.length; i++) {
        btns[i].addEventListener("click", function () {
          var current = document.getElementsByClassName("active");
          current[0].className = current[0].className.replace(" active", "");
          this.className += " active";
        });
      }



    </script>


    <% }) %>


    <!-- Für die Fälle: Samstag und Sonntag und Datenbank liefert keine Daten zurueckt. -->


    <% } else { %>



