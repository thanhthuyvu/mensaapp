<%- include("partials/header"); -%>


<section class="jumbotron head">

  <div class="container">

    <div class="row justyfy-content-start">

      <div class="col-7">

        <h3>
          <a href="/mensen/<%=mensaid%>" class="text-muted"><%=mensaName%></a>
        </h3>

        <h6 class="text-muted">Mensa Adress</h6>
      </div>

    </div>


  </div>

</section>

<main role="main" class="container-fluid main">

  <div class="container-fluid">

    <div id="demo" class="carousel slide mb-3 mt-3 shadow" data-interval="false" data-ride="carousel">

      <!-- The slideshow -->
      <div class="carousel-inner card text-center">

        <div class="carousel-item active card-body justify-content-center">
          <h5 class="card-title">ANGEBOTE AM</h5>
          <h6 class="card-subtitle mb-3 text-muted"><%=today%></h6>

        </div>
        <div class="carousel-item card-body">
          <h5 class="card-title">ANGEBOTE AM</h5>
          <h6 class="card-subtitle mb-3 text-muted"><%=today%></h6>

        </div>
        <div class="carousel-item card-body">
          <h5 class="card-title">ANGEBOTE AM</h5>
          <h6 class="card-subtitle mb-3 text-muted"><%=today%></h6>

        </div>
      </div>

      <!-- Left and right controls -->
      <a class="carousel-control-prev" href="/mensen/<%=mensaid%>/<%=mensaName%>/<%=lastday%>/meals" data-slide="prev">
        <span class="carousel-control-prev-icon"></span>
      </a>
      <a class="carousel-control-next" href="/mensen/<%=mensaid%>/<%=mensaName%>/<%=nextday%>/meals" data-slide="next">
        <span class="carousel-control-next-icon"></span>
      </a>

    </div>

    <!--  FILTERS   -->

    <!--Accordion wrapper-->
    <div class="accordion md-accordion shadow mb-3" id="accordionEx" role="tablist" aria-multiselectable="true">

      <!-- Accordion card -->
      <div class="card">

        <!-- Card header -->
        <div class="card-header" role="tab" id="headingOne1">
          <a data-toggle="collapse" data-parent="#accordionEx" href="#collapseOne1" aria-expanded="true"
            aria-controls="collapseOne1">
            <h5 class="mb-0 text-muted nounderline">
              FILTERN <i class="fas fa-angle-down rotate-icon nounderline"></i>
            </h5>
          </a>
        </div>

        <!-- Card body -->
        <div id="collapseOne1" class="collapse show" role="tabpanel" aria-labelledby="headingOne1"
          data-parent="#accordionEx">
          <div class="card-body">

            <div class="form-check mb-2 ">
              <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
              <label class="form-check-label" for="defaultCheck1">
                Vegetarisch
              </label>



            </div>

            <div class="form-check mb-2">
              <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
              <label class="form-check-label" for="defaultCheck1">
                Fleich
              </label>
            </div>



            <div class="form-check mb-3">
              <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
              <label class="form-check-label" for="defaultCheck1">
                Fisch
              </label>
            </div>

            <hr>

            <div class="form-check mb-3">
              <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
              <label class="form-check-label" for="defaultCheck1">
                Preisen Sortieren
              </label>
            </div>

            <hr>

            <div class="form-check mb-2">
              <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
              <label class="form-check-label" for="defaultCheck1">
                Grüne Ampel
              </label>
            </div>



            <div class="form-check mb-2">
              <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
              <label class="form-check-label" for="defaultCheck1">
                Rote Ampel
              </label>
            </div>
          </div>
        </div>
      </div>
    </div>




    <!-- Accordion card -->


    <!-- Accordion wrapper -->

    <!-- // FILTERS   -->



    <% if(dishes.length != 0){ %>
    <%  dishes.forEach(function(dish){ %>
      <% var dishString= JSON.stringify(dish); %>


    <div class="card mb-3 shadow">
      <form action="/speise/<%=dish.id%>/save" method="post" >
        <div class="card-header">
      <h5><%=dish.category%></h5>
        
          <div class="add-btn">
            <input id="<%=dish.id%>" type="checkbox" name="checkbox" value="<%=dishString%>" onChange="this.form.submit()"/>
          <label for="<%=dish.id%>"/>
          </div>
        </div>
      <div class="card-body">
        <h6 class="card-title"><%=dish.name%></h6>
        <p class="card-text"><%=dish.prices.students%></p>
        
      </div>
    </form>
    </div>




    <% }) %>


    <!-- Für die Fälle: Samstag und Sonntag und Datenbank liefert keine Daten zurueckt. -->


    <% } else { %>



    <div class="card mb-3 shadow">
      <h5 class="card-header">Keine Speise gefunden!</h5>
      <div class="card-body">
        <h6 class="card-title">Mensa ist an diesem Tag voraussichtlich zugeschlossen!</h6>


      </div>
    </div>

  </div>



  <% } %>

  <div class="overlay">
    
  </div>

</main>

</div>

</div>
<%- include("partials/footer"); -%>