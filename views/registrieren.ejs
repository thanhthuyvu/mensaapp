  <div class="cotainer">
    <div class="form-container regis-container">

      <div class="row justify-content-center">
        <div class="col-md-8">
          <div class="card">

            <div class="card-header login-header"> Account Erstellen
            </div>

            <div class="card-body">


              <!-- PARTIASLS-->
              <% include("partials/messages");  %>

              <form action="/users/registrieren" method="POST">

                <div class="form-group row">

                  <label for="name" class="col-md-4 col-form-label text-md-right">Name</label>
                  <div class="col-md-6">
                    <input type="text" id="name" class="form-control" name="name" required
                      value="<%= typeof name != 'undefined' ? name : '' %>">

                  </div>
                </div>

                <div class="form-group row">
                  <label for="email" class="col-md-4 col-form-label text-md-right">Email</label>

                  <div class="col-md-6">
                    <input type="email" id="email" class="form-control" name="email" required
                      value="<%= typeof email != 'undefined' ? email : '' %>">

                  </div>
                </div>

                <div class="form-group row">
                  <label for="password" class="col-md-4 col-form-label text-md-right">Password</label>
                  <div class="col-md-6">
                    <input type="password" id="password" class="form-control" name="password" required
                      value="<%= typeof password != 'undefined' ? password : '' %>">
                  </div>
                </div>

                <div class="form-group row">
                  <label for="password" class="col-md-4 col-form-label text-md-right">Confirm Password</label>

                  <div class="col-md-6">
                    <input type="password" id="password2" class="form-control" name="password2" required
                      value="<%= typeof password2 != 'undefined' ? password2 : '' %>">
                  </div>
                </div>

                <div class="form-group row">
                  <div class="col-md-6 offset-md-4">

                    <a>Haben Sie bereits Account? </a>
                    <a href="/users/login" class="k-button">Einloggen</a>
                  </div>
                </div>

                <div class="col-md-6 offset-md-4">
                  <button type="submit" class="btn btn-primary">
                    Register
                  </button>
                </div>

              </form>

            </div>

          </div>
        </div>
      </div>

    </div>
  </div>


</main>
<%- include("partials/footer"); -%>